{
  "extends": "standard",
  "rules": {
    "arrow-parens": ["error", "always"],
    "comma-dangle": ["error", "only-multiline"],
    "max-len": [1, 120, 2],
    "spaced-comment": "off",
    "no-var": "off",
    "quotes": ["error", "double", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "curly": 0
  }
}
