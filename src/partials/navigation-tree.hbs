{{#if navigation.length}}
  <ul{{#if (big ./level 0)}} class="uk-nav-sub"{{/if}}>
    {{#each navigation}}
      <li class="uk-parent{{#if (eq @root.page.url ./url)}} uk-active{{/if}}" data-depth="{{or ../level 0}}">
        {{#if ./content}}
          {{#if ./url}}
            <a href="
              {{~#if (eq ./urlType 'internal')}}{{{relativize @root.page.url ./url}}}
              {{~else}}{{{./url}}}{{~/if}}">{{{./content}}}</a>
          {{else}}
            <span>{{{./content}}}</span>
          {{/if}}
        {{/if}}
        {{> navigation-tree navigation=./items level=(increment ../level)}}
      </li>
    {{/each}}
  </ul>
{{/if}}
