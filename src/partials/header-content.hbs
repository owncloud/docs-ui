<header class="header" role="banner">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{{or site.url siteRootPath}}}">{{site.title}}</a>
      {{#if env.ELASTICSEARCH_NODE}}
        <div class="navbar-item search">
          <span class="control">
            <input
              id="search"
              class="search-input"
              type="text"
              placeholder="Search"
              data-host="{{env.ELASTICSEARCH_NODE}}"
              data-index="{{env.ELASTICSEARCH_INDEX}}"
              data-auth="{{env.ELASTICSEARCH_READ_AUTH}}">
              <div class="animation">
              </div>
           </span>
           <div class="results">
           </div>
        </div>
      {{/if}}
<!-- we do not have any hamburger stuff to show like links to external sites
      <button class="navbar-burger" aria-controls="topbar-nav" aria-expanded="false" aria-label="Toggle main menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
-->
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
      </div>
    </div>
  </nav>
</header>
