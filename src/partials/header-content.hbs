<header class="header" role="banner">
  <div>
    <nav class="uk-navbar-container uk-navbar" uk-sticky>
        <a class="uk-navbar-item uk-logo" href="{{or site.url (or siteRootUrl siteRootPath)}}">{{site.title}}</a>
      <div id="topbar-nav" class="uk-navbar-right">
          <ul class="uk-navbar-nav">
            {{> header-nav}}

          {{#if env.ELASTICSEARCH_HOST}}
            <div class="navbar-item search">
              <span class="control">
                <input
                  id="search"
                  type="text"
                  placeholder="Search"
                  data-host="{{env.ELASTICSEARCH_PROTO}}://{{env.ELASTICSEARCH_HOST}}:{{env.ELASTICSEARCH_PORT}}"
                  data-index="{{env.ELASTICSEARCH_INDEX}}"
                  data-auth="{{env.ELASTICSEARCH_READ_AUTH}}">
                <div class="animation"></div>
              </span>

              <div class="results"></div>
            </div>
          {{/if}}
        </div>
      </div>
    </nav>
  </div>
</header>
