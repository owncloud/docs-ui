<header class="header" role="banner">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{or site.url (or siteRootUrl siteRootPath)}}">{{site.title}}</a>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
        {{> header-nav}}
        {{#if env.ELASTICSEARCH_HOST}}
          <div class="navbar-item">
            <span class="control">
              <input
                id="search"
                type="text"
                placeholder="Search"
                data-proto="{{env.ELASTICSEARCH_PROTO}}"
                data-host="{{env.ELASTICSEARCH_HOST}}"
                data-port="{{env.ELASTICSEARCH_PORT}}"
                data-auth="{{env.ELASTICSEARCH_READ_AUTH}}"
                data-index="{{env.ELASTICSEARCH_INDEX}}">
            </span>
          </div>
        {{/if}}
      </div>
    </div>
  </nav>
</header>
