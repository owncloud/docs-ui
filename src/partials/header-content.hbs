<header class="header" role="banner">
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item" href="{{or site.url (or siteRootUrl siteRootPath)}}">{{site.title}}</a>
    </div>
    <div id="topbar-nav" class="navbar-menu">
      <div class="navbar-end">
        {{> header-nav}}

          <div class="navbar-item search-wrap">
            <span class="control">
              <input
                id="search"
                type="text"
                placeholder="Search"
                data-url="{{env.ELASTICSEARCH_PROTO}}://{{env.ELASTICSEARCH_HOST}}/{{env.ELASTICSEARCH_INDEX}}/_search"
                data-auth="{{env.ELASTICSEARCH_READ_AUTH}}"
                data-port="{{env.ELASTICSEARCH_PORT}}">
                <div class="animation"></div>
            </span>

            <div class="results-wrap">
              <div class="quad"></div>
              <ul class="results">
              </ul>
            </div>

          </div>

      </div>
    </div>
  </nav>
</header>
